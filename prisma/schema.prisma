// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int            @id @default(autoincrement())
  email      String         @unique
  name       String
  authUserId String         @map("auth_user_id") @db.Uuid
  animals    AnimalOnUser[]

  @@index([authUserId], name: "auth_user_id")
  @@map("users")
}

model AnimalOnUser {
  userId    Int      @map("user_id")
  user      User     @relation(fields: [userId], references: [id])
  animalId  Int      @map("animal_id")
  animal    Animal   @relation(fields: [animalId], references: [id])
  role      Role     @default(USER)
  createdAt DateTime @default(now()) @map("created_at")

  @@id([userId, animalId])
  @@map("animals_on_users")
}

enum Role {
  ADMIN
  USER
}

model Animal {
  id    Int            @id @default(autoincrement())
  name  String
  image String?
  care  Care[]
  users AnimalOnUser[]
  days  Day[]

  @@map("animals")
}

model Care {
  id          Int        @id @default(autoincrement())
  animalId    Int        @map("animal_id")
  title       String
  index       Int
  description String?
  link        String?
  steps       CareStep[]

  animal Animal @relation(fields: [animalId], references: [id])

  @@unique([animalId, index])
  @@map("care")
}

model CareStep {
  id          Int     @id @default(autoincrement())
  careId      Int     @map("care_id")
  index       Int
  title       String
  description String?

  care Care @relation(fields: [careId], references: [id])

  @@unique([careId, index])
  @@map("care_steps")
}

model Day {
  id             Int      @id @default(autoincrement())
  animalId       Int      @map("animal_id")
  date           DateTime @db.Date
  completedSteps Int[]    @map("completed_steps")
  updatedAt      DateTime @default(now()) @updatedAt @map("updated_at")

  animal Animal @relation(fields: [animalId], references: [id])

  @@unique([animalId, date])
  @@map("days")
}
